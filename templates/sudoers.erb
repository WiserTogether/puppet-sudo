<% if has_variable?("sudo_mailto") -%>
Defaults    mailto=<%= sudo_mailto %>
<% end -%>
Defaults    always_set_home
root  ALL=(ALL) ALL
<% if has_variable?("sudo_admin_group") -%>
%admin ALL=(ALL) ALL
<% end -%>
<% if has_variable?("sudo_nopasswd_admin_group") -%>
%admin ALL=NOPASSWD: ALL
<% end -%>

